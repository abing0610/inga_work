<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.inga.entity.Tree">

  <resultMap type="Tree" id="tree">
    <id column="id" property="id"/>
    <result column="pid" property="pid"/>
    <result column="lev" property="lev"/>
    <result column="op" property="op"/>
    <result column="acturl" property="acturl"/>
    <result column="name" property="name"/>
    <result column="uptime" property="uptime"/>
  </resultMap>

  <select id="getTreeJson" parameterType="map" resultType="tree">
    select * from Tree
  </select>
  
  <insert id="insertTreeNode" parameterType="tree">
        insert into tree 
        (id,pid,lev,op,acturl,name,uptime)
        values (
        #{id,jdbcType=VARCHAR},
        #{pid,jdbcType=VARCHAR},
        #{lev,jdbcType=VARCHAR},
        #{op,jdbcType=VARCHAR},
        #{acturl,jdbcType=VARCHAR},
        #{name,jdbcType=VARCHAR},
        #{uptime,jdbcType=VARCHAR
        })      
    </insert>
  
